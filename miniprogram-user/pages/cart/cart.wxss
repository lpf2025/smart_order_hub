page {
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.container {
  min-height: 100vh;
}

.cart-list {
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin-right: 20rpx;
}

.item-image-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #FF4D4F;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF4D4F;
}

.item-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  height: 160rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.quantity-btn.minus {
  background-color: #f0f0f0;
  color: #666;
}

.quantity-btn.plus {
  background-color: #FF4D4F;
}

.quantity-value {
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.remove-btn {
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping-btn {
  background-color: #FF4D4F;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 99;
}

.footer-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.footer-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.footer-total {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.footer-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF4D4F;
}

.checkout-btn {
  background-color: #FF4D4F;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}
