<view class="container">
  <view class="header">
    <text class="title">收货地址</text>
    <button class="add-btn" bindtap="addAddress">新增地址</button>
  </view>

  <view class="address-list">
    <view 
      class="address-item" 
      wx:for="{{addresses}}" 
      wx:key="id"
      bindtap="selectAddress"
      data-id="{{item.id}}"
    >
      <view class="address-header">
        <view class="receiver-info">
          <text class="receiver-name">{{item.receiverName}}</text>
          <text class="receiver-phone">{{item.receiverPhone}}</text>
        </view>
        <view class="address-actions">
          <text wx:if="{{item.isDefault}}" class="default-badge">默认</text>
          <text class="action-text" catchtap="editAddress" data-id="{{item.id}}">编辑</text>
          <text class="action-text delete" catchtap="deleteAddress" data-id="{{item.id}}">删除</text>
        </view>
      </view>
      <view class="address-detail">
        <text>{{item.province}}{{item.city}}{{item.district}}</text>
        <text>{{item.detailAddress}}</text>
      </view>
      <text wx:if="{{!item.isDefault}}" class="set-default" catchtap="setDefault" data-id="{{item.id}}">设为默认</text>
    </view>

    <view wx:if="{{addresses.length === 0}}" class="empty">
      <text>暂无地址</text>
    </view>
  </view>
</view>
