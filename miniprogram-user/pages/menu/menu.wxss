page {
  background-color: #f5f5f5;
  height: 100vh;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.service-mode-bar {
  background-color: white;
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

.mode-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.mode-item.active {
  background-color: #FFF0F0;
  border: 2rpx solid #FF4D4F;
}

.mode-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.mode-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.mode-info {
  font-size: 22rpx;
  color: #999;
}

.menu-layout {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.category-list {
  width: 180rpx;
  background-color: #f7f7f7;
}

.category-item {
  padding: 30rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  border-left: 6rpx solid transparent;
}

.category-item.active {
  background-color: white;
  color: #FF4D4F;
  border-left-color: #FF4D4F;
  font-weight: bold;
}

.dish-list {
  flex: 1;
  padding: 20rpx;
}

.dish-item {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-description {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dish-sales {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.dish-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dish-price-section {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.dish-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF4D4F;
}

.dish-discount {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.discount-text {
  font-size: 20rpx;
  color: #FF4D4F;
  background-color: #FFF0F0;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.dish-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.action-btn.plus {
  background-color: #FF4D4F;
  color: white;
}

.action-btn.minus {
  background-color: #f0f0f0;
  color: #666;
  opacity: 0;
}

.action-btn.minus.show {
  opacity: 1;
}

.quantity {
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
  opacity: 0;
}

.quantity.show {
  opacity: 1;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.cart-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.cart-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #FF4D4F;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.cart-count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #FF4D4F;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.cart-total {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.checkout-btn {
  background-color: #FF4D4F;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}
