page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.form-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  min-height: 100rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 15rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  line-height: 60rpx;
}

.textarea {
  width: 100%;
  min-height: 150rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.location-btn {
  margin-top: 20rpx;
  background-color: #1890ff;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.submit-btn {
  width: 100%;
  background-color: #ff4d4f;
  color: white;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}
