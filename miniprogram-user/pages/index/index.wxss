page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.container {
  padding-bottom: 20rpx;
}

.header {
  background-color: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.location-bar {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  flex-shrink: 0;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 24rpx;
  color: #333;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-arrow {
  font-size: 16rpx;
  margin-left: 8rpx;
  color: #999;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  font-size: 24rpx;
  color: #999;
}

.category-bar {
  background-color: white;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.category-scroll {
  display: flex;
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #FF4D4F;
  color: white;
}

.sort-bar {
  background-color: white;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.sort-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  position: relative;
}

.sort-item.active {
  color: #FF4D4F;
  font-weight: bold;
}

.sort-item.active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF4D4F;
  border-radius: 2rpx;
}

.filter-icon {
  font-size: 24rpx;
  margin-left: 4rpx;
}

.merchant-list {
  padding: 0 20rpx;
}

.merchant-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 0;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.merchant-card-content {
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
}

.merchant-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-row1 {
  display: flex;
  align-items: center;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2329;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.reserve-tag {
  background-color: #FF7A2F;
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  margin-left: 8rpx;
  flex-shrink: 0;
}

.reserve-tag.disable {
  background-color: #C9CDD4;
}

.info-row2 {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.rating {
  font-size: 24rpx;
  color: #FF4D4F;
}

.month-sales,
.per-capita {
  font-size: 24rpx;
  color: #4E5969;
}

.info-row3 {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.min-order,
.delivery-fee {
  font-size: 24rpx;
  color: #4E5969;
}

.info-row4 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.sales-rank {
  font-size: 20rpx;
  color: #FF4D4F;
  border: 1rpx solid #FF4D4F;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.coupon-tag {
  font-size: 20rpx;
  color: #FFFFFF;
  background-color: #FF4D4F;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.info-row5 {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.delivery-time,
.distance {
  font-size: 24rpx;
  color: #86909C;
}

.empty-state {
  text-align: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #86909C;
  display: block;
  margin-bottom: 40rpx;
}

.retry-btn {
  display: inline-block;
  padding: 16rpx 48rpx;
  background-color: #FF4D4F;
  color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

.hot-dishes-area {
  width: 100%;
  padding: 0 24rpx 24rpx 24rpx;
  box-sizing: border-box;
}

.hot-dishes-title {
  font-size: 22rpx;
  color: #1F2329;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.dishes-list {
  display: flex;
  justify-content: space-between;
  gap: 8rpx;
  width: 100%;
}

.dish-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dish-img {
  width: 100%;
  height: 160rpx;
  border-radius: 8rpx;
  margin-bottom: 4rpx;
  background-color: #f0f0f0;
}

.dish-name {
  font-size: 20rpx;
  color: #1F2329;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  text-align: center;
  margin-bottom: 4rpx;
}

.dish-price {
  font-size: 22rpx;
  color: #FF4D4F;
  font-weight: 600;
}