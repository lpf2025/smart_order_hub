page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.logout-btn {
  background-color: #ff9800;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  border: none;
}

.add-btn {
  background-color: #ff4d4f;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

.category-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border-radius: 12rpx;
  padding: 20rpx;
}

.category-item {
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
}

.category-item.active {
  background-color: #ff4d4f;
  color: white;
}

.dish-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.dish-item {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.dish-image {
  width: 100%;
  height: 200rpx;
  background-color: #f0f0f0;
}

.dish-info {
  padding: 20rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.dish-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.dish-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.dish-status.on {
  background-color: #e6f7ff;
  color: #1890ff;
}

.dish-status.off {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}

.footer-links {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
  margin-top: 40rpx;
}

.footer-link {
  font-size: 24rpx;
  color: #999;
  padding: 0 10rpx;
}

.footer-divider {
  color: #ddd;
  margin: 0 10rpx;
}
