page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.order-status-card {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 16rpx;
  padding: 60rpx 30rpx;
  text-align: center;
  color: white;
  margin-bottom: 20rpx;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
}

.status-icon .icon {
  font-size: 60rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.order-info-card,
.order-items-card,
.order-summary-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}

.info-row.address-row {
  align-items: flex-start;
}

.address-text {
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
  text-align: left;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.copy-btn {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.item-list {
  display: flex;
  flex-direction: column;
}

.item-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-row:last-child {
  border-bottom: none;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
}

.item-quantity {
  font-size: 26rpx;
  color: #666;
  margin: 0 20rpx;
}

.item-price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.summary-row:last-child {
  margin-bottom: 0;
}

.summary-label {
  color: #666;
}

.summary-value {
  color: #333;
}

.summary-value.total {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 32rpx;
}

.order-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 1rpx solid #d9d9d9;
}

.action-btn.print {
  color: #666;
  border-color: #d9d9d9;
}

.action-btn.primary {
  background-color: #ff4d4f;
  color: white;
  border-color: #ff4d4f;
}

.loading {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}
