page {
  background-color: #f5f5f5;
}

.container {
  padding: 0;
}

.user-header {
  background-color: #FF9800;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: rgba(255, 255, 255, 0.2);
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #E0E0E0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.user-name {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
}

.user-phone {
  color: #666;
  font-size: 28rpx;
}

.stats-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  color: white;
}

.stat-card:nth-child(2) {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
}

.stat-card:nth-child(3) {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.stat-card:nth-child(4) {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.filter-tabs {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  white-space: nowrap;
}

.tab-item.active {
  background-color: #ff4d4f;
  color: white;
  font-weight: bold;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  font-weight: bold;
}

.status-pending {
  color: #faad14;
}

.status-processing {
  color: #1890ff;
}

.status-delivering {
  color: #13c2c2;
}

.status-completed {
  color: #52c41a;
}

.status-cancelled {
  color: #ff4d4f;
}

.order-content {
  margin-bottom: 20rpx;
}

.order-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.order-info.address-row {
  display: flex;
  align-items: flex-start;
}

.address-text {
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
}

.info-label {
  color: #999;
  flex-shrink: 0;
}

.order-amount {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 30rpx;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 1rpx solid #d9d9d9;
}

.action-btn.primary {
  background-color: #ff4d4f;
  color: white;
  border-color: #ff4d4f;
}

.empty {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 28rpx;
}
