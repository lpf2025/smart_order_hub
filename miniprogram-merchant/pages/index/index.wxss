page {
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

.stats-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.stat-card {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  color: white;
}

.stat-card:nth-child(2) {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
}

.stat-card:nth-child(3) {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
}

.stat-card:nth-child(4) {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

.recent-orders {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 24rpx;
  font-weight: bold;
}

.status-pending {
  color: #faad14;
}

.status-processing {
  color: #1890ff;
}

.status-delivering {
  color: #13c2c2;
}

.status-completed {
  color: #52c41a;
}

.status-cancelled {
  color: #ff4d4f;
}

.order-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-label {
  color: #999;
}

.order-amount {
  color: #ff4d4f;
  font-weight: bold;
  font-size: 26rpx;
}
