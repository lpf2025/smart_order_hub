<view class="container">
  <view class="avatar-section">
    <view class="avatar-wrapper" bindtap="chooseAvatar">
      <image class="avatar" src="{{formData.avatar}}" mode="aspectFill" wx:if="{{formData.avatar}}"></image>
      <view class="avatar-placeholder" wx:if="{{!formData.avatar}}">👤</view>
      <view class="avatar-mask" wx:if="{{formData.avatar}}">
        <text class="avatar-text">更换头像</text>
      </view>
    </view>
  </view>

  <view class="form-section">
    <view class="form-item">
      <text class="form-label">姓名</text>
      <input 
        class="form-input" 
        placeholder="请填写姓名" 
        placeholder-style="color: #999"
        value="{{formData.name}}"
        bindinput="onNameInput"
      />
    </view>

    <view class="form-item">
      <text class="form-label">手机号</text>
      <input 
        class="form-input" 
        type="number"
        maxlength="11"
        placeholder="请填写手机号" 
        placeholder-style="color: #999"
        value="{{formData.phone}}"
        bindinput="onPhoneInput"
      />
    </view>
  </view>

  <view class="button-section">
    <view class="save-btn" bindtap="saveRiderInfo">保存</view>
    <view class="logout-btn" bindtap="handleLogout">退出登录</view>
  </view>
</view>
