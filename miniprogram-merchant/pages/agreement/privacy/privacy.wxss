page {
  background-color: #f5f5f5;
}

.agreement-container {
  min-height: 100vh;
  padding: 30rpx;
}

.agreement-header {
  text-align: center;
  padding: 40rpx 0;
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.agreement-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.agreement-content {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
}
